.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 24rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 16rpx 0;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

.form-container {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.custom-input {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.button-group {
  margin: 36rpx 0;
}

.calculate-btn {
  height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
  background: linear-gradient(135deg, #0052d9, #1890ff);
  box-shadow: 0 8rpx 16rpx rgba(24, 144, 255, 0.2);
}

.result-container {
  text-align: center;
  padding: 36rpx 0;
  margin-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

.result-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.result-value {
  font-size: 64rpx;
  font-weight: bold;
}

.profit {
  color: #00b578;
}

.loss {
  color: #ff4d4f;
}

/* 覆盖 TDesign 默认样式 */
.t-input {
  margin-bottom: 0;
  width: 100%;
}

.input-item {
  margin-bottom: 30rpx;
}

.input-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.result {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.result-text {
  font-size: 48rpx;
  font-weight: bold;
}

.up {
  color: #ff4d4f;
}

.down {
  color: #52c41a;
} 